{
  "name": "speech-srt",
  "version": "1.0.0",
  "description": "Speech to SRT converter with translation",
  "scripts": {
    "start": "node server/server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "nodemon server/server.js",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "install:all": "npm install && cd frontend && npm install"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "aws-sdk": "^2.1531.0",
    "axios": "^1.6.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3"
  }
}
